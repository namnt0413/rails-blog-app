<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col" width="25%">Title</th>
      <th scope="col" width="50%">Content</th>
      <th scope="col" colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td width="25%"><%= post.title %></td>
        <td max-width="50%"><%= post.content %></td>
        <td>
          <button class="btn btn-success"><%= link_to 'Show', post %></button>
          <button class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></button>
          <button class="btn btn-danger"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>