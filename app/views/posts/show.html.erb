<p id="notice"><%= notice %></p>
  <h1>Detail Post</h1>

  <div class="row" style="margin:auto">
    <div class="form-group col-3">
      <div class="form-control row">
        <%= image_tag(@post.image) %>
      </div>
      <div class="form-control row" style="align-item:center">
        Click <%= link_to 'Here', edit_post_path(@post) %> to edit the post
      </div>
      <div class="form-control row" style="align-item:center">
          <%= link_to 'Back', posts_path %>
      </div>
    </div>
    <div class="form-group col-9">
      <div class="form-control row"> 
        <label><strong>Title:</strong></label>
        <textarea  class="form-control" disabled><%= @post.title %></textarea>
      </div>
        <div class="form-control row"> 
          <label><strong>Content:</strong></label>
          <textarea class="form-control" rows="15" disabled><%= @post.content %></textarea>
      </div>
    </div>
  </div>

